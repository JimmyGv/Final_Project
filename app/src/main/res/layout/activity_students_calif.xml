<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity_students_calif">

    <ImageView
        android:id="@+id/ivCalifStudentsLogo"
        android:layout_width="160dp"
        android:layout_height="120dp"
        android:layout_gravity="center_horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/imagen"
        />



    <TextView
        android:id="@+id/tvTextCalifStHead"
        android:layout_margin="12dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Calificaciones"
        android:textSize="24sp"
        android:gravity="center_horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ivCalifStudentsLogo"
        />

    <TextView
        android:id="@+id/tvStCalifTrimestre"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:layout_marginTop="30dp"
        android:text="Trimestre: "
        app:layout_constraintStart_toStartOf="@id/btnStudentsCalifRegresar"
        app:layout_constraintTop_toBottomOf="@id/tvTextCalifStHead"
        />

    <Spinner
        android:id="@+id/spinnerStuCalifTr"
        android:layout_width="160dp"
        android:layout_marginTop="12dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@id/btnStudentsCalifRegresar"
        app:layout_constraintTop_toBottomOf="@id/tvTextCalifStHead"

        />

    <TextView
        android:id="@+id/tvTextHeadCalifStudent"
        android:layout_margin="12dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Alumno                Materia             Calificacion"
        android:gravity="center_horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvStCalifTrimestre"
        />

    <ListView
        android:id="@+id/listVerCalif"
        android:layout_width="0dp"
        android:layout_height="350dp"
        android:layout_margin="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTextHeadCalifStudent"

        />

    <Button
        android:id="@+id/btnStudentsCalifRegresar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:text="@string/btn_regresar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>