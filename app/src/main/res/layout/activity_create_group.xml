<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity_create_group">

    <ImageView
        android:id="@+id/ivCreateGroupLogo"
        android:layout_width="160dp"
        android:layout_height="120dp"
        android:layout_gravity="center_horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/imagen"
        />


    <TextView
        android:id="@+id/tvCrGrDoc"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:layout_marginTop="30dp"
        android:text="Docente: "
        app:layout_constraintStart_toStartOf="@id/btnAdminViewCreateGroup"
        app:layout_constraintTop_toBottomOf="@id/ivCreateGroupLogo"
        />

    <Spinner
        android:id="@+id/spinnerCrGrDoc"
        android:layout_width="180dp"
        android:layout_marginTop="12dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@id/btnAdminViewCreateGroup"
        app:layout_constraintTop_toBottomOf="@id/ivCreateGroupLogo"

        />

    <EditText
        android:id="@+id/etNameGroup"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:drawablePadding="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvCrGrDoc"
        android:hint="Nombre del grupo"
        android:drawableStart="@drawable/vector_group"
        />

    <EditText
        android:id="@+id/etCupoGroup"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:drawablePadding="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etNameGroup"
        android:hint="Cupo del Grupo"
        android:drawableStart="@drawable/vector_cupo"
        />

    <TextView
        android:id="@+id/tvCrGrAula"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:layout_marginTop="30dp"
        android:text="Aula: "
        app:layout_constraintStart_toStartOf="@id/btnAdminViewCreateGroup"
        app:layout_constraintTop_toBottomOf="@id/etCupoGroup"
        />

    <Spinner
        android:id="@+id/spinnerCrGrAula"
        android:layout_width="180dp"
        android:layout_marginTop="12dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@id/btnAdminViewCreateGroup"
        app:layout_constraintTop_toBottomOf="@id/etCupoGroup"

        />

    <TextView
        android:id="@+id/tvCrGrGrade"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:layout_marginTop="30dp"
        android:text="Grado: "
        app:layout_constraintStart_toStartOf="@id/btnAdminViewCreateGroup"
        app:layout_constraintTop_toBottomOf="@id/tvCrGrAula"
        />

    <Spinner
        android:id="@+id/spinnerCrGrGrade"
        android:layout_width="180dp"
        android:layout_marginTop="12dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@id/btnAdminViewCreateGroup"
        app:layout_constraintTop_toBottomOf="@id/spinnerCrGrAula"

        />

    <Button
        android:id="@+id/btnAdminViewCreateGroup"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="70dp"
        android:text="@string/btn_save"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <Button
        android:id="@+id/btnAdminViewCreateGroupReg"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:text="@string/btn_regresar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>